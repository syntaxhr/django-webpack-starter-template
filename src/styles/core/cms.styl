.cms-render-model
    display flex !important
    justify-content flex-end
    padding 20px
    width 100%
    color darker-text-color !important
    background-color cms-color
    transition all .2s

    &:after
        content: '\f044';
        font-family: FontAwesome;
        font-weight: normal;
        font-style: normal;
        margin:0 0 0 10px;
        text-decoration:none;

    &:hover
        transition all .2s
        transform scale(1.01)
        box-shadow box-shadow-var
        cursor pointer
